<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.arlahiru.tsart.CameraPreview android:id="@+id/preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <com.arlahiru.tsart.FocusBoxView
        android:id="@+id/focus_box"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <Button
        android:id="@+id/button_capture"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Scan"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/button_flash"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Flash"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp" />

    <Button
        android:id="@+id/button_focus"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Focus"
        android:layout_gravity="left|bottom"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp" />


</FrameLayout>
